

@{
    ViewBag.Title = "AddUser";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row" style="margin-top:30px;">
    <br />
    <div class="col-sm-8 col-sm-offset-2 ">
        <div style="background-color:#7db5e4; padding:15px; margin-top: -4%; box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);">
            <div class="col-sm-12">

                @if (Html.Raw(TempData["msgAlert"]).ToString() == "N")
                {
                    <div class="alert alert-warning alert-dismissable">
                        <a href="#" class="close" data-dismiss="alert" aria-label="close">×</a>
                        <h4 class="text-center">@Html.Raw(TempData["msgAlertDetails"]).ToString().</h4>
                    </div>

                }

                @if (Html.Raw(TempData["msgAlert"]).ToString() == "Y")
                {
                    <div class="alert alert-success alert-dismissable">
                        <a href="#" class="close" data-dismiss="alert" aria-label="close">×</a>
                        <h4 class="text-center">@Html.Raw(TempData["msgAlertDetails"]).ToString().</h4>
                    </div>
                }
            </div>

            <h3 class="lang text-center" key="addUser">Add Student</h3>
            @*==========================*@
            <hr>
            <form action="@Url.Action("AddUser", "User")" method="post" role="form">
                @*<input type="hidden" name="StudentId" id="StudentId" value="@ViewBag.StudentId" />*@

                <div class="">
                    <fieldset>
                        <legend>User Information</legend>
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label for="FirstName">First Name:</label>
                                    <input type="text" class="form-control" name="FirstName" id="FirstName" placeholder="User's FirstName" required />
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label for="LastName">Last Name:</label>
                                    <input type="text" class="form-control" name="LastName" id="LastName" placeholder="User's LastName" required />
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label for="UId">Phone:</label>
                                    <input type="text" class="form-control" name="Phone" id="Phone" placeholder="Phone number" required />
                                </div>
                            </div>
                            <div class="col-sm-6">

                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label for="BirthDate">Date of Birth:</label>
                                    <input type="date" class="form-control" name="Birthday" id="Birthday" required />

                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label for="Gender">Gender:</label>
                                    <select class="form-control" id="Gender" name="Gender" required>
                                        <option selected disabled value="">Select Gender</option>
                                        <option value="male">Male</option>
                                        <option value="female">Female</option>
                                    </select>

                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label for="Email">Email:</label>
                                    <input type="email" class="form-control" name="Email" id="Email" required />

                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label for="Password">Password:</label>
                                    <input type="password" class="form-control" name="Password" id="Password" required />

                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label for="RePassword">RePassword:</label>
                                    <input type="password" class="form-control" name="RePassword" id="RePassword" required />

                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label for="UserTypeId">UserType:</label>
                                    <select class="form-control" id="UserTypeId" name="UserTypeId" required>
                                        <option class="lang" selected disabled value="" key="selectUserType">Select User Type</option>
                                        <option value="1">Teacher</option>
                                        <option value="2">Guardian</option>
                                        <option value="3">Admin</option>
                                    </select>

                                </div>
                            </div>
                        </div>
                    </fieldset>
                </div>
                <br />
                <br />
                <div class="form-group text-center">
                    <button type="submit" id="btnSubmit" class="btn btn-primary" style="min-width:150px;"><span class=""> </span> Submit</button>
                </div>
                <br />
            </form>

        </div>
    </div>

</div>

